<Window x:Class="MealPlanner.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MealPlanner.Views"
        mc:Ignorable="d" 
        Title="Meal Planner" Height="720" Width="1280">
    <Grid>
        <TabControl Background="#03396c" TabStripPlacement="Left" SelectedIndex="{Binding Path=MainTabControl, Mode=TwoWay}">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <ContentPresenter Content="{TemplateBinding Content}">
                                    <ContentPresenter.LayoutTransform>
                                        <RotateTransform Angle="270" />
                                    </ContentPresenter.LayoutTransform>
                                </ContentPresenter>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Padding" Value="3" />
                </Style>
            </TabControl.Resources>

            <!--.-.-.-.-.-.-.-.-.-.-.-.-->
            <!--Calorie Calculator Tab-->
            <!--.-.-.-.-.-.-.-.-.-.-.-.-->
            <TabItem Name="CalorieCalculator" Background="Transparent" Width="50" Height="105" Margin="0,-2" VerticalAlignment="Top">
                <TabItem.Header>
                    <!--<Image Source="F:\Saved Files\Downloads\meal-1320568026248944827.png" Stretch="Uniform" Height="50" Width="50"/>--> Calorie Calculator
                </TabItem.Header>
                <Grid>
                    <!--Title-->
                    <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="50" TextAlignment="Center" Margin="0,5,0,574" Foreground="White" 
                               Text="Calorie Calculator"/>
                    <TextBlock TextWrapping="Wrap" FontSize="17" Margin="0,88,0,530" Foreground="White" TextAlignment="Center">
                        The Calorie Calculator is used to estimate how many calories a person needs to consume each day, 
                        and provides a benchmark for how they can lose weight.
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="17" Margin="26,518,0,0" Foreground="White">
                        The Calorie Calculator uses the Mifflin-St. Jeor Equation to calculate the BMR of the person, 
                        and then multiplies the BMR by a multiplier depending on what the person's activity level is. <LineBreak/> <LineBreak/>
                        
                        <Bold> The Mifflin-St. Jeor Equation: </Bold><LineBreak/>
                        BMR = 10 * (weight in kg) + 6.25 * (height in cm) - 5 * (age) + 5* <LineBreak/>
                        * For females, change +5 to -161.
                    </TextBlock>

                    <!--Personal information section-->
                    <WrapPanel Margin="100,155,718,167">
                        <!--Age, textbox-->
                        <TextBlock TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="White" Width="135">Age</TextBlock>
                        <TextBox x:Name="CalorieCalculatorAge" FontSize="16" Width="120" Margin="5,0,0,0" PreviewTextInput="NumberValidationTextBox"/>

                        <!--Gender, radiobutton-->
                        <TextBlock TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="White" Width="135">Gender</TextBlock>
                        <RadioButton x:Name="CalorieCalculatorMale" FontSize="16" Margin="5,5,0,0" Foreground="White">Male</RadioButton>
                        <RadioButton x:Name="CalorieCalculatorFemale" FontSize="16" Margin="5,5,0,0" Foreground="White">Female</RadioButton>

                        <!--Height, textbox-->
                        <TextBlock TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="White" Width="135">Height (in.)</TextBlock>
                        <TextBox Name="CalorieCalculatorHeight" FontSize="16" Width="120" Margin="5,5,0,0" PreviewTextInput="NumberValidationTextBox"/>

                        <!--Weight, textbox-->
                        <TextBlock TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="White" Width="135">Weight (lbs.)</TextBlock>
                        <TextBox Name="CalorieCalculatorWeight" FontSize="16" Width="120" Margin="5,5,0,0" PreviewTextInput="NumberValidationTextBox"/>

                        <!--Activity, combobox-->
                        <TextBlock TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="White" Width="135">Activity</TextBlock>
                        <ComboBox Name="Activities" FontSize="16" Width="230" Margin="5,5,0,0" SelectedItem="{Binding Path=CalorieCalculatorActivity, Mode=TwoWay}"/>

                        <!--Calculate, button-->
                        <Button x:Name="Calculate" FontSize="16" Width="120" Margin="140,10,5,5" FontWeight="Bold">Calculate</Button>

                        <!--Clear, button-->
                        <Button x:Name="ClearFields" FontSize="16" Width="60" Margin="5,10,5,5" FontWeight="Bold">Clear</Button>

                        <!--Exercise text-->
                        <TextBlock TextWrapping="Wrap" FontSize="15" Margin="20, 10, 0, 0" Foreground="White" Width="334"> 
                            ⚫ <Bold>Exercise:</Bold> 15-30 minutes of elevated heart rate activity <LineBreak/>
                            ⚫ <Bold>Intense Exercise:</Bold> 15-30 minutes of elevated heart rate activity <LineBreak/>
                            ⚫ <Bold>Very Intense Exercise:</Bold> 15-30 minutes of elevated heart rate activity</TextBlock>
                    </WrapPanel>

                    <!--Daily Calorie Intake Section-->
                    <WrapPanel Margin="695,150,100,172">
                        <!--Titles-->
                        <Border Height="50" BorderThickness="1" BorderBrush="Black">
                            <TextBlock Padding="7" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="Black" Width="215" Background="LightGray" Height="47" FontWeight="Bold">Type of Weight Loss</TextBlock>
                        </Border>

                        <Border Height="50" BorderThickness="1" BorderBrush="Black">
                            <TextBlock Padding="7" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="Black" Width="185" Background="LightGreen" Height="47" FontWeight="Bold">Calories/day</TextBlock>
                        </Border>

                        <!--Maintain Weight-->
                        <Border Height="60" BorderThickness="1" BorderBrush="Black">
                            <TextBlock Padding="7" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="Black" Width="215" Background="LightGray" Height="60">Maintain Weight</TextBlock>
                        </Border>

                        <Border Height="60" BorderThickness="1" BorderBrush="Black">
                            <TextBlock Name="CalorieCalculatorMaintainWeight" Padding="7" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="Black" Width="185" Background="LightGreen" Height="60" FontWeight="Bold"></TextBlock>
                        </Border>

                        <!--Mild Weight Loss-->
                        <Border Height="60" BorderThickness="1" BorderBrush="Black">
                            <TextBlock Padding="7" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="Black" Width="215" Background="LightGray" Height="60">Mild Weight Loss <LineBreak/> 
                    <Span Foreground="Gray" FontSize="17">0.5 lbs/week</Span></TextBlock>
                        </Border>

                        <Border Height="60" BorderThickness="1" BorderBrush="Black">
                            <TextBlock Name="CalorieCalculatorMildWeightLoss" Padding="7" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="Black" Width="185" Background="LightGreen" Height="60" FontWeight="Bold"></TextBlock>
                        </Border>

                        <!--Weight Loss-->
                        <Border Height="60" BorderThickness="1" BorderBrush="Black">
                            <TextBlock Padding="7" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="Black" Width="215" Background="LightGray" Height="60">Weight Loss <LineBreak/> 
                    <Span Foreground="Gray" FontSize="17">1 lb/week</Span></TextBlock>
                        </Border>

                        <Border Height="60" BorderThickness="1" BorderBrush="Black">
                            <TextBlock Name="CalorieCalculatorWeightLoss" Padding="7" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="Black" Width="185" Background="LightGreen" Height="60" FontWeight="Bold"></TextBlock>
                        </Border>

                        <!--Mild Weight Loss-->
                        <Border Height="60" BorderThickness="1" BorderBrush="Black">
                            <TextBlock Padding="7" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="Black" Width="215" Background="LightGray" Height="60">Extreme Weight Loss <LineBreak/> 
                    <Span Foreground="Gray" FontSize="17">2 lbs/week</Span></TextBlock>
                        </Border>

                        <Border Height="60" BorderThickness="1" BorderBrush="Black">
                            <TextBlock Name="CalorieCalculatorExtremeWeightLoss" Padding="7" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" Foreground="Black" Width="185" Background="LightGreen" Height="60" FontWeight="Bold"></TextBlock>
                        </Border>
                        <TextBlock TextWrapping="Wrap" FontSize="15" Margin="2, 5, 0, 0" Foreground="White" Width="408">
                            <Bold>Note:</Bold> Please consult a doctor if you are planning to consume less than the recommended calories a day (1500 cal.).
                        </TextBlock>
                    </WrapPanel>

                    <!--Continue, button-->
                    <Border BorderThickness="1">
                        <Button x:Name="CalorieCalculatorContinue" FontSize="16" FontWeight="Bold" Content="Continue" Margin="1058,590,30,30" />
                    </Border>
                </Grid>
            </TabItem>

            <!--.-.-.-.-.-.-.-.-->
            <!--Diet Plans Tab-->
            <!--.-.-.-.-.-.-.-.-->
            <TabItem Name="DietPlans" Header="Diet Plans">
                <Grid>
                    <WrapPanel>
                        <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="50" TextAlignment="Center" Foreground="White" Text="Diet Plans" Width="1212" Height="70"/>

                        <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="30" Margin="15,15,0,5" Foreground="White" Width="1208">How many pounds do you want to lose a week?</TextBlock>
                        <RadioButton Name="DietPlansHalfLbAWeek" FontSize="16" Margin="50,5,0,0" Foreground="White" GroupName="PoundsLost">0.5 lbs. a week</RadioButton>
                        <RadioButton Name="DietPlansOneLbAWeek" FontSize="16" Margin="200,5,0,0" Foreground="White" GroupName="PoundsLost">1 lbs. a week</RadioButton>
                        <RadioButton Name="DietPlansTwoLbsAWeek" FontSize="16" Margin="200,5,0,0" Foreground="White" GroupName="PoundsLost" Visibility="{Binding Path=DietPlansTwoLbsAWeekIsVisible, Mode=OneWay}">2 lbs. a week</RadioButton>

                        <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="30" Margin="15,15,0,5" Foreground="White" Width="1208">What kind of weekly calorie plan do you want to follow?</TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="17" Margin="15,0,0,5" Foreground="White">
                        The calorie plans in this app focus on what is called zigzag calorie cycling. It involves staggering a low-calorie diet with high-calorie days. 
                            The idea is that if you can keep your body guessing, you can avoid homeostasis. So by confusing the body, the hope is that the person's 
                            metabolism will shift into high gear burning calories more efficiently.
                        </TextBlock>

                        <RadioButton Name="DietPlansZigzagPlanOne" FontSize="16" Margin="50,5,0,0" Foreground="White" GroupName="ZigzagPlans">Zigzag Plan 1</RadioButton>
                        <RadioButton Name="DietPlansZigzagPlanTwo" FontSize="16" Margin="200,5,0,0" Foreground="White" GroupName="ZigzagPlans">Zigzag Plan 2</RadioButton>
                        <RadioButton Name="DietPlansNoZigzagPlan" FontSize="16" Margin="200,5,0,0" Foreground="White" GroupName="ZigzagPlans">No Zigzag</RadioButton>

                        <TextBlock Margin="0,0,300,0" Width="138"></TextBlock>

                        <!--Zigzag Plan 1 Table-->
                        <WrapPanel Height="365" Width="251">
                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="15,15,0,0">Sunday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagOneSunday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray" Margin="0,15,0,0">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="15,0,0,0">Monday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagOneMonday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="15,0,0,0">Tuesday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagOneTuesday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="15,0,0,0">Wednesday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagOneWednesday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="15,0,0,0">Thursday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagOneThursday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="15,0,0,0">Friday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagOneFriday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="15,0,0,0">Saturday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagOneSaturday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>
                        </WrapPanel>

                        <!--Zigzag Plan 2 Table-->
                        <WrapPanel Height="365" Width="251" Margin="40,0,0,0">
                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,15,0,0">Sunday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagTwoSunday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray" Margin="0,15,0,0">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Monday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagTwoMonday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Tuesday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagTwoTuesday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Wednesday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagTwoWednesday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Thursday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagTwoThursday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Friday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagTwoFriday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Saturday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansZigzagTwoSaturday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>
                        </WrapPanel>

                        <!--No Zigzag Plan Table-->
                        <WrapPanel Height="365" Width="251" Margin="55,0,0,0">
                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,15,0,0">Sunday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansNoZigzagSunday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray" Margin="0,15,0,0">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Monday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansNoZigzagMonday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Tuesday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansNoZigzagTuesday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Wednesday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansNoZigzagWednesday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Thursday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansNoZigzagThursday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Friday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansNoZigzagFriday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>

                            <Border BorderThickness="1">
                                <TextBlock Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="100" Background="LightGray" Margin="30,0,0,0">Saturday</TextBlock>
                            </Border>
                            <Border BorderThickness="1">
                                <TextBlock Name="DietPlansNoZigzagSaturday" Padding="7" TextWrapping="Wrap" FontSize="16" TextAlignment="Center" Foreground="Black" Width="92" Background="LightGray">0</TextBlock>
                            </Border>
                        </WrapPanel>

                    </WrapPanel>
                    <TextBlock TextWrapping="Wrap" FontSize="17" Margin="10,599,326,49" Foreground="White">
                             <Bold>Note:</Bold> Please consult a doctor if you are planning to consume less than the recommended calories a day (1500 cal.).
                    </TextBlock>

                    <!--Calculate, button-->
                    <Border BorderThickness="1">
                        <Button x:Name="DietPlansContinue" FontSize="16" FontWeight="Bold" Content="Continue" Margin="1058,590,30,30" />
                    </Border>
                </Grid>
            </TabItem>

            <!--.-.-.-.-..-.-.-.-->
            <!--Meal Planner Tab-->
            <!--.-.-.-.-..-.-.-.-->
            <TabItem Name="MealPlanner" Header="Meal Planner">
                <WrapPanel>
                    <TabControl Height="690" Width="1217" Background="#03396c">
                        <!--OVERVIEW TAB-->
                        <TabItem Name="MealPlanner_Overview" Header="Overview" Style="{x:Null}">

                        </TabItem>

                        <!--SUNDAY TAB-->
                        <TabItem Name="MealPlanner_Sunday" Header="Sunday" Style="{x:Null}">
                            <Grid>
                                <!--Header-->
                                <WrapPanel Margin="0,0,10,492">
                                    <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="100" Margin="15,15,0,5" Foreground="White">SUNDAY</TextBlock>
                                </WrapPanel>

                                <WrapPanel Margin="0,166,0,0">
                                    <!--Sunday Breakfast-->
                                    <WrapPanel Height="186" Width="278">
                                        <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="40" Margin="15,15,0,5" Foreground="White">Breakfast</TextBlock>
                                        <ComboBox Name="SundayBreakfastOne" FontSize="16" Width="200" Height="27" Margin="15,5,0,0" SelectedIndex="{Binding Path=SundayBreakfastOneSelectedMeal, Mode=TwoWay}"/>
                                        <ComboBox Name="SundayBreakfastTwo" FontSize="16" Width="200" Height="27" Margin="15,5,0,0" SelectedIndex="{Binding Path=SundayBreakfastTwoSelectedMeal, Mode=TwoWay}"/>
                                        <Button x:Name="ClearSundayBreakfast" FontSize="16" Width="60" Margin="155,10,5,5" FontWeight="Bold">Clear</Button>
                                    </WrapPanel>
                                    <!--Sunday Lunch-->
                                    <WrapPanel Height="186" Width="278">
                                        <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="40" Margin="15,15,0,5" Foreground="White">Lunch</TextBlock>
                                        <ComboBox Name="SundayLunchOne" FontSize="16" Width="200" Height="27" Margin="15,5,0,0" SelectedIndex="{Binding Path=SundayLunchOneSelectedMeal, Mode=TwoWay}"/>
                                        <ComboBox Name="SundayLunchTwo" FontSize="16" Width="200" Height="27" Margin="15,5,0,0" SelectedIndex="{Binding Path=SundayLunchTwoSelectedMeal, Mode=TwoWay}"/>
                                        <Button x:Name="ClearSundayLunch" FontSize="16" Width="60" Margin="155,10,5,5" FontWeight="Bold">Clear</Button>
                                    </WrapPanel>
                                    <!--Sunday Dinner-->
                                    <WrapPanel Height="186" Width="278">
                                        <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="40" Margin="15,15,0,5" Foreground="White">Dinner</TextBlock>
                                        <ComboBox Name="SundayDinnerOne" FontSize="16" Width="200" Height="27" Margin="15,5,0,0" SelectedIndex="{Binding Path=SundayDinnerOneSelectedMeal, Mode=TwoWay}"/>
                                        <ComboBox Name="SundayDinnerTwo" FontSize="16" Width="200" Height="27" Margin="15,5,0,0" SelectedIndex="{Binding Path=SundayDinnerTwoSelectedMeal, Mode=TwoWay}"/>
                                        <Button x:Name="ClearSundayDinner" FontSize="16" Width="60" Margin="155,10,5,5" FontWeight="Bold">Clear</Button>
                                    </WrapPanel>
